<launch>
    <!-- 定义一个名为scan_topic的参数，默认值为"scan" -->
    <!-- 这个参数允许用户在启动时指定激光雷达数据的话题名称 -->
    <arg name="scan_topic" default="scan" />

    <!-- Gmapping SLAM节点 -->
    <!-- 启动slam_gmapping节点，用于基于激光雷达数据进行同步定位与建图（SLAM） -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen" clear_params="true">
        <!-- odom_frame: 里程计坐标系名称，Gmapping将使用此坐标系下的里程计数据 -->
        <param name="odom_frame" value="odom"/>
        <!-- map_update_interval: 地图更新的最小时间间隔（秒） -->
        <param name="map_update_interval" value="5.0"/>
        <!-- maxRange: 激光雷达的最大有效测量距离（米） -->
        <param name="maxRange" value="5.0"/>
        <!-- maxUrange: 用于更新地图的最大激光雷达测量距离（米），应小于或等于maxRange -->
        <param name="maxUrange" value="4.5"/>
        <!-- sigma: 粒子滤波中用于计算粒子权重的标准差 -->
        <param name="sigma" value="0.05"/>
        <!-- kernelSize: 粒子滤波中用于平滑的核大小 -->
        <param name="kernelSize" value="1"/>
        <!-- lstep: 粒子线性运动的步长 -->
        <param name="lstep" value="0.05"/>
        <!-- astep: 粒子角度运动的步长 -->
        <param name="astep" value="0.05"/>
        <!-- iterations: 扫描匹配的迭代次数 -->
        <param name="iterations" value="5"/>
        <!-- lsigma: 激光雷达测量误差的标准差 -->
        <param name="lsigma" value="0.075"/>
        <!-- ogain: 占用栅格地图更新的增益因子 -->
        <param name="ogain" value="3.0"/>
        <!-- lskip: 跳过激光扫描的帧数，0表示不跳过 -->
        <param name="lskip" value="0"/>
        <!-- srr: 机器人运动模型中，平移-平移的噪声系数 -->
        <param name="srr" value="0.01"/>
        <!-- srt: 机器人运动模型中，平移-旋转的噪声系数 -->
        <param name="srt" value="0.02"/>
        <!-- str: 机器人运动模型中，旋转-平移的噪声系数 -->
        <param name="str" value="0.01"/>
        <!-- stt: 机器人运动模型中，旋转-旋转的噪声系数 -->
        <param name="stt" value="0.02"/>
        <!-- linearUpdate: 触发地图更新的最小线性位移（米） -->
        <param name="linearUpdate" value="0.5"/>
        <!-- angularUpdate: 触发地图更新的最小角度位移（弧度） -->
        <param name="angularUpdate" value="0.436"/>
        <!-- temporalUpdate: 触发地图更新的最小时间间隔（秒），-1表示禁用 -->
        <param name="temporalUpdate" value="-1.0"/>
        <!-- resampleThreshold: 粒子重采样的阈值，当有效粒子数低于此阈值时进行重采样 -->
        <param name="resampleThreshold" value="0.5"/>
        <!-- particles: 粒子滤波中使用的粒子数量 -->
        <param name="particles" value="80"/>
        <!-- xmin, ymin, xmax, ymax: 初始地图的边界（米） -->
        <param name="xmin" value="-1.0"/>
        <param name="ymin" value="-1.0"/>
        <param name="xmax" value="1.0"/>
        <param name="ymax" value="1.0"/>
        <!-- delta: 占用栅格地图的分辨率（米/像素） -->
        <param name="delta" value="0.05"/>
        <!-- llsamplerange: 线性-线性采样范围 -->
        <param name="llsamplerange" value="0.01"/>
        <!-- llsamplestep: 线性-线性采样步长 -->
        <param name="llsamplestep" value="0.01"/>
        <!-- lasamplerange: 线性-角度采样范围 -->
        <param name="lasamplerange" value="0.005"/>
        <!-- lasamplestep: 线性-角度采样步长 -->
        <param name="lasamplestep" value="0.005"/>
        <!-- remap: 将节点内部的"scan"话题重映射为外部传入的scan_topic参数值 -->
        <remap from="scan" to="$(arg scan_topic)"/>
    </node>
</launch>
