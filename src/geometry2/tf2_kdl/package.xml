<?xml version="1.0"?>
<!-- ROS 包定义，遵循 format 2 规范 -->
<package format="2">
  <!-- 包的名称 -->
  <name>tf2_kdl</name>
  <!-- 包的版本号 -->
  <version>0.6.5</version>
  <!-- 包的简要描述 -->
  <description>
    tf2 的 KDL 绑定，提供 KDL 类型与 tf2 之间的转换。
  </description>
  <!-- 包的维护者及其邮箱 -->
  <maintainer email="tfoote@osrfoundation.org">Tully Foote</maintainer>
  <!-- 包的作者 -->
  <author>Wim Meeussen</author>
  <!-- 包的许可证类型 -->
  <license>BSD</license>

  <!-- 包的官方网站链接 -->
  <url type="website">http://ros.org/wiki/tf2</url>

  <!-- 构建工具依赖，指定 catkin 版本不低于 0.5.68 -->
  <buildtool_depend version_gte="0.5.68">catkin</buildtool_depend>

  <!-- 构建时依赖项 -->
  <build_depend>cmake_modules</build_depend> <!-- Eigen 所需 -->
  <build_depend>eigen</build_depend> <!-- KDL 内部所需 -->

  <!-- 构建导出依赖项 -->
  <build_export_depend>eigen</build_export_depend> <!-- KDL 内部所需 -->

  <!-- 运行时依赖项 -->
  <depend>orocos_kdl</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>

  <!-- 测试依赖项 -->
  <test_depend>ros_environment</test_depend>
  <test_depend>rostest</test_depend>

</package>
